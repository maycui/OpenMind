<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/sample_publisher" />

    <TextView
        android:id="@+id/tvArticleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvPublisher"
        android:layout_marginTop="7dp"
        android:text="@string/sample_article_title"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvArticleTitle"
        android:text="@string/sample_author"
        android:textAllCaps="true"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/ivArticleImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_menu_gallery"
        android:layout_below="@+id/tvDatePublished"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvImageCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivArticleImage"
        android:text="@string/sample_image_caption"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvArticleDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvImageCaption"
        android:text="@string/sample_description" />

    <TextView
        android:id="@+id/tvArticleUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvArticleDescription"
        android:text="OPEN ARTICLE"
        android:textAllCaps="true"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ivOpenIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@android:drawable/ic_menu_set_as"
        android:layout_alignTop="@+id/tvArticleUrl"
        android:layout_toRightOf="@+id/tvArticleUrl"
        android:layout_alignBottom="@+id/tvArticleUrl"
        android:layout_alignRight="@+id/tvPublisher"
        android:layout_alignEnd="@+id/tvPublisher" />

    <TextView
        android:id="@+id/tvDatePublished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvAuthor"
        android:text="July 13, 2017"
        android:textSize="10sp" />
</RelativeLayout>