<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    android:clickable="true"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:id="@+id/rlOuter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/ivPublisherImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            card_view:srcCompat="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/tvPublisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivPublisherImage"
            android:layout_toEndOf="@+id/ivPublisherImage"
            android:layout_toRightOf="@+id/ivPublisherImage"
            android:text="Article Publisher" />


        <TextView
            android:id="@+id/tvDateCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPublisher"
            android:layout_toEndOf="@+id/ivPublisherImage"
            android:layout_toRightOf="@+id/ivPublisherImage"
            android:text="Time or date"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivCategoryIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ivArticleImage"
            android:layout_alignRight="@+id/ivArticleImage"
            android:layout_alignTop="@+id/tvPublisher"
            card_view:srcCompat="@drawable/ic_menu_gallery" />

        <ImageView
            android:id="@+id/ivBookmarkIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivCategoryIcon"
            android:layout_toLeftOf="@+id/ivCategoryIcon"
            android:layout_toStartOf="@+id/ivCategoryIcon"
            card_view:srcCompat="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/wvWebView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="Article Title blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvTitle"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_below="@+id/tvTitle"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Source"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvGreyBar"
            android:layout_alignBottom="@+id/tvGreyBar"
            android:layout_toEndOf="@+id/tvGreyBar"
            android:layout_toRightOf="@+id/tvGreyBar"
            android:text="Author"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/tvGreyBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvSource"
            android:layout_toEndOf="@+id/tvSource"
            android:layout_toRightOf="@+id/tvSource"
            android:text="  |  " />

        <WebView
            android:id="@+id/wvWebView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivPublisherImage"
            android:layout_marginTop="21dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
